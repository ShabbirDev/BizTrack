<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/imagebutton_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/RemoveQuantity"
                style="@style/quantity_button_style"
                android:src="@mipmap/ic_remove_quantity" />

            <TextView
                android:id="@+id/Quantity"
                style="@style/quantity_textview_style" />

            <ImageButton
                android:id="@+id/AddQuantity"
                style="@style/quantity_button_style"
                android:src="@mipmap/ic_add_quantity" />


        </LinearLayout>

        <TextView
            android:id="@+id/EstimatedCost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:background="@color/colorWhite"
            android:text="Estimated Cost: 0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            style="@style/imagebutton_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/ButtonCancel"
                style="@style/negative_button_style"
                android:text="Cancel" />


            <Button
                android:id="@+id/ButtonConfirm"
                style="@style/positive_button_style"
                android:text="Confirm" />


        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>